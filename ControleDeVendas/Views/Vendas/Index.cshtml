@model IEnumerable<ControleDeVendas.Models.Venda>
@{

}

<h2>Vendas</h2>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Produto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataVenda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QtdeVenda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValorVenda)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendedor.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataVenda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QtdeVenda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorVenda)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <footer>
            <h4>
                <a asp-action="Create">Nova Venda</a>
            </h4>
        </footer>
    </div>
</div>
